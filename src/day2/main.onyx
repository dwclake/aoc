/*
 * Advent of Code 2023
 * Day 2
 * Cube Conundrum
 */

use core {*}

path :: "src/day2/inputs.txt"

main :: (args: [][&]u8) -> Result(void, any) {
    file := os.open(path)?;
    defer os.close(&file);

    contents := os.get_contents(&file);

    sum := string.split_iter(contents, "\n")
        |> iter.map(line => 1)
        |> iter.fold(0, (a, b) => a + b);

    printf("{}\n", sum);
}
